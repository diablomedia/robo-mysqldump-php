{
    "name": "diablomedia/robo-mysqldump-php",
    "description": "Mysqldump-php tasks for Robo Task Runner",
    "type": "robo-tasks",
    "license": "LGPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "DiabloMedia\\Robo\\Task\\MysqldumpPhp\\": "src"
        }
    },
    "require": {
        "consolidation/robo": "~1",
        "ifsnop/mysqldump-php": "^2.5",
        "php": ">=7.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.11",
        "phpstan/phpstan": "^0.9.2"
    },
    "scripts": {
        "check-style": "php-cs-fixer fix --dry-run -vv",
        "fix-style": "php-cs-fixer fix",
        "phpstan-analysis": "phpstan analyse -l 7 src"
    }
}

