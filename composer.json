{
    "name": "diablomedia/robo-mysqldump-php",
    "description": "Mysqldump-php tasks for Robo Task Runner",
    "type": "robo-tasks",
    "license": "LGPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "DiabloMedia\\Robo\\Task\\MysqldumpPhp\\": "src"
        }
    },
    "require": {
        "consolidation/robo": "^1.0 || ^2.0 || ^3.0 || ^4.0",
        "ifsnop/mysqldump-php": "^2.5",
        "php": ">=7.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.54.0",
        "phpstan/phpstan": "^1.10.0"
    },
    "scripts": {
        "style-check": "php-cs-fixer fix --dry-run -vv",
        "fix-style": "php-cs-fixer fix",
        "phpstan": "phpstan analyse -c phpstan.neon --no-progress --ansi"
    }
}

